{
    "manifest_version": 2,
    "name": "Thunderbird AI Compose",
    "version": "0.1.0",
    "description": "Thunderbird Mail Extension that helps you compose emails using AI",
    "permissions": [
        "compose",
        "messagesRead",
        "accountsRead",
        "storage"
    ],
    "background": {
        "scripts": [
            "browser-polyfill.js",
            "background.js"
        ]
    },
    "compose_action": {
        "default_title": "Write with AI",
        "default_popup": "popup/popup.html"
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    },
    "applications": {
        "gecko": {
            "id": "thunderbird-ai-compose@applications.thatcomputerscientist.com"
        }
    }
}